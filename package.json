{
  "name": "@mohamed-s/ts-logger",
  "version": "1.2.0",
  "description": "A flexible and testable TypeScript logger with support for custom sinks, rate limiting, and source tagging.",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/esm/node.js",
      "require": "./dist/node.js",
      "types": "./dist/node.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:watch": "concurrently \"yarn build:cjs --watch\" \"yarn build:esm --watch\"",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build",
    "link:local": "yarn build && yarn link",
    "test": "vitest run --coverage",
    "dev": "vitest watch"
  },
  "keywords": [
    "logger",
    "typescript",
    "sink",
    "rate-limit",
    "console",
    "file",
    "remote"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-c8": "^0.27.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "@sentry/browser": "^9.30.0",
    "@sentry/node": "^9.30.0"
  },
  "peerDependencies": {
    "@sentry/browser": "^9.30.0",
    "@sentry/node": "^9.30.0"
  },
  "peerDependenciesMeta": {
    "@sentry/browser": {
      "optional": true
    },
    "@sentry/node": {
      "optional": true
    }
  }
}
